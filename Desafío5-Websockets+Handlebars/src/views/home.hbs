<div>
    <h2>Lista de productos (presionar F5 para actualizar) </h2>

    <table class="product-list">
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Miniatura</th>
        </tr>
        {{#if products.length}}
        {{#each products}}
        <tr>
            <td>{{this.title}}</td> 
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td><img height="72px" width="72px" src={{this.thumbnail}} /></td>
        </tr>
        {{/each}}
        {{/if}}
    </table>
</div>

<style>
    table,
    th,
    td {
        border: 1px solid;
    }

    .title {
        text-align: center;
    }

    .product-list {
        width: 100%;
    }
</style>